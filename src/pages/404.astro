---
import Layout from "../layouts/Layout.astro";

const accent = "#C9A646";
---

<Layout>
  <section class="flex min-h-screen items-center justify-center px-4 text-white antialiased">
    <div class="w-full max-w-2xl text-center">
      <!-- 404 Number -->
      <div class="mb-8">
        <h1
          class="font-bold leading-none tracking-tight"
          style={`color:${accent}; font-size: clamp(100px, 18vw, 160px);`}
        >
          404
        </h1>
      </div>

      <!-- Error Message -->
      <div class="mb-12">
        <h2 class="font-medium tracking-wide" style="font-size: 28px;">
          Page Not Found
        </h2>
        <p class="mx-auto mt-6 max-w-lg leading-relaxed text-white/70" style="font-size: 16px;">
          Sorry, we couldn't find the page you're looking for. The page may have
          been moved or doesn't exist.
        </p>
      </div>

      <!-- Navigation Button -->
      <div>
        <a
          href="/"
          class="inline-block font-medium text-white transition hover:brightness-110 active:translate-y-px"
          style={`background:${accent}; font-size: 16px; padding: 14px 40px; border-radius: 20px;`}
        >
          Back to Homepage
        </a>
      </div>
    </div>
  </section>
</Layout>
