<section class="py-16 sm:py-20 lg:py-24 bg-[#151824]">
  <div class="max-w-screen-2xl px-4 sm:px-6 lg:px-8 mx-auto w-full">
    <div class="text-center space-y-8 sm:space-y-10 lg:space-y-12">
      <!-- Main Heading -->
      <h2 class="!text-[37.8px] font-medium text-white leading-tight">
        Why Industry Leaders<br />Choose Us
      </h2>

      <!-- Subtitle -->
      <p class="!text-[21px] text-[#9CA3A6] leading-relaxed max-w-4xl mx-auto">
        Proven excellence, reliable innovation, and<br
          class="hidden sm:block"
        />engineering that scales with your ambitions
      </p>

      <!-- Stats Grid -->
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8 pt-8 lg:pt-12"
      >
        <!-- Stat 1: World-Leading Industries -->
        <div
          class="bg-[#191E2E] rounded-[25px] p-8 lg:p-10 flex flex-col items-center justify-center space-y-4"
        >
          <div class="!text-[42px] font-medium text-[#C9A646] leading-none">
            5+
          </div>
          <div class="!text-[18.2px] text-white text-center leading-relaxed">
            World-Leading<br />Industries
          </div>
        </div>

        <!-- Stat 2: Years of Experience -->
        <div
          class="bg-[#191E2E] rounded-[25px] p-8 lg:p-10 flex flex-col items-center justify-center space-y-4"
        >
          <div class="!text-[42px] font-medium text-[#C9A646] leading-none">
            25+
          </div>
          <div class="!text-[18.2px] text-white text-center leading-relaxed">
            Years of<br />Experience
          </div>
        </div>

        <!-- Stat 3: Successful Client Projects -->
        <div
          class="bg-[#191E2E] rounded-[25px] p-8 lg:p-10 flex flex-col items-center justify-center space-y-4"
        >
          <div class="!text-[42px] font-medium text-[#C9A646] leading-none">
            50+
          </div>
          <div class="!text-[18.2px] text-white text-center leading-relaxed">
            Successful<br />Client Projects
          </div>
        </div>

        <!-- Stat 4: Reliability -->
        <div
          class="bg-[#191E2E] rounded-[25px] p-8 lg:p-10 flex flex-col items-center justify-center space-y-4"
        >
          <div class="!text-[42px] font-medium text-[#C9A646] leading-none">
            100%
          </div>
          <div class="!text-[18.2px] text-white text-center leading-relaxed">
            Reliability
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
